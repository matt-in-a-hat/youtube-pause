{
  "manifest_version": 2,

  "name": "Youtube tab manager",
  "description": "Keep track of which tab you are listening to.",
  "version": "0.1",

  "permissions": [
    "tabs",
    "https://www.youtube.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
      "js": ["contentscript.js"],
      "matches": ["https://www.youtube.com/watch*", "http://www.youtube.com/watch*"]
  }]
}
